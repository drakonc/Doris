body, html
    font-family: 'Roboto', sans-serif;
    font-size: 14px
    margin: 0px
    padding: 0px

body
    background-color: #f9f9f9

.shadow
    box-shadow: 1px 7px 16px 1px rgba(0,0,0,0.12);
    -webkit-box-shadow: 1px 7px 16px 1px rgba(0,0,0,0.12);
    -moz-box-shadow: 1px 7px 16px 1px rgba(0,0,0,0.12);

.mtop16
    margin-top: 16px !important

.page
    align-items: center
    box-sizing: border-box
    display: flex
    justify-content: center
    height: 100vh
    width: 100%
    .box
        background-color: #fff
        border-bottom: 4px solid #00b2ee
        border-radius: 8px
        padding: 32px
        width: 480px
        .logo
            display: block
            width: 100%
            img
                display: block
                margin: 0px auto
                width: 50%
        h2.title
            color: #2c2c2c
            display: block
            font-size: 1.5em
            font-weight: 500
            margin: 0px
            text-align: center
            padding: 0px





